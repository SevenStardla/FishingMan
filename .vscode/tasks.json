{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build raylib",
      "type": "shell",
      "command": "C:/msys64/mingw64/bin/g++.exe",
      "args": [
        "src/main.cpp",
        "src/chat/ChatManager.cpp",
        "src/ui/Button.cpp",
        "src/data/ChatData.cpp",
        "src/core/GameManager.cpp",
        "-IC:/raylib-5.5_win64_mingw-w64/include",
        "-LC:/raylib-5.5_win64_mingw-w64/lib",
        "-lraylib",
        "-lopengl32",
        "-lgdi32",
        "-lwinmm",
        "-std=c++17",
        "-finput-charset=UTF-8",
        "-fexec-charset=UTF-8",
        "-o",
        "build/game.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
